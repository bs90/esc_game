<% if current_user %>
  <div class="flex flex-col items-center my-4 w-full">
    <%= link_to scanner_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg mb-4" do %>
      QR Scanner
    <% end %>
    <%= image_tag @qr_url %>
    <br>
    <div class="w-full grid gap-4 grid-cols-2 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-4 2xl:grid-cols-4 mt-4">
      <%= link_to list_items_path do %>
        <div class="bg-white rounded-xl shadow p-4 text-center w-full">
          <p class="font-semibold text-lg">Items</p>
        </div>
      <% end %>
      <div class="bg-white rounded-xl shadow p-4 text-center w-full">
        <p class="font-semibold text-lg">Logs</p>
      </div>
      <%= link_to notifications_path do %>
        <div class="bg-white rounded-xl shadow p-4 text-center w-full">
          <p class="font-semibold text-lg flex items-center justify-center">
            Notifications
            <% if current_user.unread_notifications_count.to_i > 0 %>
              <span class="ml-2 inline-block bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded-full">
                <%= current_user.unread_notifications_count %>
              </span>
            <% end %>
          </p>
        </div>
      <% end %>
      <div class="bg-white rounded-xl shadow p-4 text-center w-full">
        <p class="font-semibold text-lg">
          Touches
          <span class="ml-2 inline-block bg-green-500 text-white text-xs font-bold px-2 py-0.5 rounded-full"><%= current_user.touch_count %></span>
        </p>
      </div>
    </div>
  </div>
<% else %>
  <ul>
    <li>●　We don't store any of your personal information (such as email, name, avatar, etc.) in our database! You can check the source code <a class="underline" href="https://github.com/bs90/esc_game" target="_blank">HERE</a></li>
    <li>●　This service is available today only — we'll delete everything tonight!</li>
    <li>→　So just go ahead and...</li>
  </ul>
<% end %>
